<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageView_imagen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="94dp"
        android:layout_height="76dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_id"
        android:layout_width="59dp"
        android:layout_height="44dp"
        android:text="ID"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_nombre"
        android:layout_width="80dp"
        android:layout_height="62dp"
        android:layout_marginStart="4dp"
        android:text="nombre"
        app:layout_constraintStart_toEndOf="@+id/textView_id"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_posicion"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:text="posicion"
        app:layout_constraintStart_toEndOf="@+id/textView_nombre"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView_edad"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        android:text="edad"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView_id" />


</androidx.constraintlayout.widget.ConstraintLayout>